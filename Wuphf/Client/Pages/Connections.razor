@page "/connections"
@using Wuphf.Shared.Dialog;
@using Wuphf.Client.Models.Dialog
@inject IMsgBox MsgBox  
<h3>Connections</h3>

        This is my computer quiz?

        What are 1's and 0's called?
<div>
    <input type="text" @bind-value="guess" />
    <button @onclick="@ValidateGuess">Guess</button>
</div>


@code {
    private string guess;
    async void ValidateGuess()
    {
        if (guess.ToUpper() == "BINARY")
        {
            await MsgBox.Show("You are Correct", "Question", DialogButtons.OK);
            return;
        }
        await MsgBox.Show("Sorry, try again.", "Question", DialogButtons.OK);
    }

}
